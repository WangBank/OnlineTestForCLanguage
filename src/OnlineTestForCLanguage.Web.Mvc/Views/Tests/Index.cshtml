@using OnlineTestForCLanguage.Web.Startup
@model OnlineTestForCLanguage.Web.Models.Tests.IndexViewModel
@{ 
    ViewBag.Title = "考试管理";
    ViewBag.CurrentPageName = PageNames.Tests; 
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Tests/Index.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>试卷信息</h1>
            </div>
            <div class="col-sm-6">
                @if (Model.CanAddTest)
                {
                <a href="javascript:;" data-toggle="modal" data-target="#TestCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    新增
                </a>
                }
                
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            @*<div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Tests/Index.AdvancedSearch.cshtml")
                            </div>*@
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="TestsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>考试编号</th>
                                        <th>考试标题</th>
                                        <th>考试开始时间</th>
                                        <th>考试结束时间</th>
                                         <th>创建时间</th>
                                        <th>创建教师编号</th>
                                        <th>创建教师名称</th>
                                        <th style="width: 150px">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Tests/_CreateModal.cshtml", Model)

<div class="modal fade" id="TestEditModal" tabindex="-1" role="dialog" aria-labelledby="TestEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="TestStartModal" tabindex="-1" role="dialog" aria-labelledby="TestStartModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
