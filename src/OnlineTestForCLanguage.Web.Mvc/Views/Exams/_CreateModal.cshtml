
@using OnlineTestForCLanguage.Web.Models.Common.Modals
@using OnlineTestForCLanguage.Exams
@model OnlineTestForCLanguage.Web.Models.Exams.IndexViewModel
@{ Layout = null; }
<div class="modal fade" id="ExamCreateModal" tabindex="-1" role="dialog" aria-labelledby="ExamCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("新增考题"))
            <form name="ExamCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" role="tab" href="#create-Exam-details">考题明细</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-Exam-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">考题难度</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="Difficulty" required>
                                        <option value="0">简单</option>
                                        <option value="1">一般</option>
                                        <option value="2">困难</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">考题类型</label>
                                <div class="col-md-9">
                                    <select class="form-control" id="ExamType" name="ExamType" required>
                                        <option value="0">单选题</option>
                                        <option value="1">多选题</option>
                                        <option value="2">判断题</option>
                                        <option value="3">简答题</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">标题</label>
                                <div class="col-md-9">
                                    <input type="text" name="Title" id="Title" class="form-control" required maxlength="80">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">考题内容</label>
                                <div class="col-md-9">
                                    <textarea name="Content" id="Content" class="form-control" required maxlength="200"></textarea>
                                </div>
                            </div>

                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">答案</label>
                                <div class="col-md-9" id="examContent">
                                    <table class="col-md-12">
                                        <tr align="center">
                                            <td width="15%">是否答案</td>
                                            <td>答案内容</td>
                                        </tr>
                                        <tr align="center">
                                            <td><input type="radio" id='answerid0' name="answerName" /></td>
                                            <td><input type="text" name="AnswerContent" class="form-control" required maxlength="80"></td>
                                        </tr>
                                        <tr align="center">
                                            <td><input type="radio" id='answerid1' name="answerName" /></td>
                                            <td> <input type="text" name="AnswerContent" class="form-control" required maxlength="80"></td>

                                        </tr>
                                        <tr align="center">
                                            <td><input type="radio" id='answerid2' name="answerName" /></td>
                                            <td> <input type="text" name="AnswerContent" class="form-control" required maxlength="80"></td>

                                        </tr>
                                        <tr align="center">
                                            <td><input type="radio" id='answerid3' name="answerName" /></td>
                                            <td> <input type="text" name="AnswerContent" class="form-control" required maxlength="80"></td>

                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">解析</label>
                                <div class="col-md-9">
                                    <textarea name="Explain" class="form-control" id="Explain" maxlength="200"></textarea>
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">考题分数</label>
                                <div class="col-md-9">
                                    <input type="text" id="score" value="5" name="score" class="form-control" maxlength="80" readonly>
                                </div>
                            </div>

                        </div>
                        
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
