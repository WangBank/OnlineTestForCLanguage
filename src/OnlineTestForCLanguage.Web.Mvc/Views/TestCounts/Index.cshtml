@using OnlineTestForCLanguage.Web.Startup
@model OnlineTestForCLanguage.Web.Models.TestCounts.IndexTestCountViewModel
@{
    ViewBag.Title = "考试记录管理";
    ViewBag.CurrentPageName = PageNames.TestCounts;
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/TestCounts/Index.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>考试记录管理</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/TestCounts/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="TestCountsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>考试记录编号</th>
                                        <th>学生编号</th>
                                        <th>学生姓名</th>
                                        <th>学生分数</th>
                                        <th>试卷总分</th>
                                        <th>是否阅卷</th>
                                        <th>阅卷老师</th>
                                        <th>考试内容</th>
                                        <th>考试开始时间</th>
                                        <th>考试结束时间</th>
                                        <th style="width: 150px">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="TestCountInspectModal" tabindex="-1" role="dialog" aria-labelledby="TestCountInspectModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="TestCountCheckModal" tabindex="-1" role="dialog" aria-labelledby="TestCountCheckModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

